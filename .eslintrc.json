{
  "extends": ["eslint:recommended", "next/core-web-vitals", "plugin:prettier/recommended"],
  "rules": {
    "react-hooks/rules-of-hooks": "off",
    "react/display-name": "off",

    "react/function-component-definition": [
      2,
      {
        "namedComponents": "arrow-function"
      }
    ],
    "no-unused-vars": "warn",
    "no-undef": "off"
  }
}
